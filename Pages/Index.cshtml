@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">City Breaks</h1>

    <div class="row">
        @foreach (var city in Model.Cities)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@city.Name</h5>
                        <p class="card-text">@city.Country.CountryName</p>
                        <a href="/CityDetails/@city.Name" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
